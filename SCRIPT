@contextmanager
def row():
    with div(class_=\"row\"):
        yield

@contextmanager
def col(n):
    with div(class_=f\"col-{n}\"):
        yield

@contextmanager
def card(title, description):
    with div(class_=\"card\"):
        header(h4(title))
        p(description)
        with footer(class_=\"is-right\"):
            yield
